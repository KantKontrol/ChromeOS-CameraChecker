{
    "name": "Chrome OS Camera Checker",
    "short_name": "Camera Checker",
    "author": "KantKontrol",
    "version": "1.1",
    "manifest_version": 2,
    "description": "A simple app used to check chromebook camera and microphone. Headphones Recommended.",
    "icons": {
        "128": "128.png",
        "16": "16.png"
    },
    "app": {
        "background": {
            "scripts": ["background.js"],
            "persistent": false
        }
    },
    "permissions": [
        "audioCapture",
        "videoCapture"
    ],
    "kiosk_enabled": true
}